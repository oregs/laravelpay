{
    "name": "oregs/laravelpay",
    "description": "This is developed for easy integration of flutterwave APIs with laravel  v5.* to latest.",
    "type": "library",
    "require": {
        "php": "^7.2",
        "illuminate/support": "7.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "8.5.x-dev",
        "scrutinizer/ocular": "dev-master",
        "satooshi/php-coveralls": "2.2.x-dev",
        "mockery/mockery": "1.3.x-dev",
        "curl/curl": "dev-master"
    },
    "autoload": {
        "classmap": [
            "src/Pay.php"
        ],
        "psr-4": {
          "Oregsideas\\Pay\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Oregsideas\\Laravelpay\\Providers\\PayServiceProvider"
            ],
            "aliases": {
                "Pay": "Oregsideas\\Pay\\Facades\\Pay"
            }
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Oregunwa Segun",
            "email": "oregs4life@gmail.com"
        }
    ],
    "minimum-stability": "dev"
}

{
    "name": "oregs/laravelpay",
    "description": "This is developed for easy integration of flutterwave APIs with laravel  v5.* to latest.",
    "keywords": ["php","github", "laravel","Open Source","payments", "Oregs", "Flutterwave Pay", "Flutterwave", "pay", "oregsideas.com","laravel 5"],
    "type": "library",
    "require": {
        "php": "^7.2|^8.0",
        "illuminate/support": "^5.0|^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "scrutinizer/ocular": "^1.1",
        "satooshi/php-coveralls": ">0.7",
        "mockery/mockery": "^1.3.1",
        "curl/curl": "^2.3"
    },
    "autoload": {
        "classmap": [
            "src/Pay.php"
        ],
        "psr-4": {
          "Oregsideas\\Pay\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Oregsideas\\Pay\\PayServiceProvider"
            ],
            "aliases": {
                "Pay": "Oregsideas\\Pay\\Facades\\Pay"
            }
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Oregunwa Segun",
            "email": "oregs4life@gmail.com"
        }
    ],
    "minimum-stability": "dev"
}
